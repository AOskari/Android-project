<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDF4"
    tools:context=".aktiviteetit.Asetukset">

    <TextView
        android:id="@+id/aseta"
        android:layout_width="408dp"
        android:layout_height="31dp"
        android:background="@color/primaryColor"
        android:gravity="center"
        android:text="@string/aseta"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tieto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="30dp"
        android:text="@string/tieto2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tieto1" />

    <TextView
        android:id="@+id/kg"
        android:layout_width="27dp"
        android:layout_height="18dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="75dp"
        android:text="@string/kg"
        app:layout_constraintBottom_toTopOf="@+id/pituus"
        app:layout_constraintEnd_toEndOf="@+id/annaNimi"
        app:layout_constraintStart_toStartOf="@+id/annaNimi"
        app:layout_constraintTop_toTopOf="@+id/annaNimi" />

    <EditText
        android:id="@+id/paino"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/tieto2"
        app:layout_constraintEnd_toStartOf="@+id/cm"
        app:layout_constraintStart_toStartOf="@+id/annaNimi"
        app:layout_constraintTop_toTopOf="@+id/tieto2" />

    <TextView
        android:id="@+id/tieto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="97dp"
        android:text="@string/tieto1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/annaNimi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/paino"
        app:layout_constraintStart_toEndOf="@+id/tieto1" />

    <TextView
        android:id="@+id/ohje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="24dp"
        android:text="@string/ohje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paino" />

    <TextView
        android:id="@+id/tieto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:text="@string/tieto3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pituus" />

    <EditText
        android:id="@+id/pituus"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/cm"
        app:layout_constraintEnd_toStartOf="@+id/cm"
        app:layout_constraintStart_toEndOf="@+id/tieto3"
        app:layout_constraintTop_toBottomOf="@+id/cm" />

    <TextView
        android:id="@+id/cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="93dp"
        android:layout_marginRight="93dp"
        android:text="@string/cm"
        app:layout_constraintEnd_toEndOf="@+id/annaNimi"
        app:layout_constraintStart_toEndOf="@+id/tieto3"
        app:layout_constraintTop_toBottomOf="@+id/paino" />

    <TextView
        android:id="@+id/otsikko1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/otsikko1"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/annaNimi"
        app:layout_constraintStart_toStartOf="@+id/annaNimi"
        app:layout_constraintTop_toBottomOf="@+id/aseta" />

    <TextView
        android:id="@+id/otsikko2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="39dp"
        android:text="@string/otsikko2"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pituus" />

    <Spinner
        android:id="@+id/tavoite1"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="@+id/tavoite2"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumber2"
        app:layout_constraintStart_toStartOf="@+id/otsikko2"
        app:layout_constraintTop_toTopOf="@+id/otsikko2" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber3"
        app:layout_constraintEnd_toStartOf="@+id/yksikko1"
        app:layout_constraintStart_toEndOf="@+id/tavoite2"
        app:layout_constraintTop_toBottomOf="@+id/otsikko2" />

    <TextView
        android:id="@+id/yksikko1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="9dp"
        android:text="@string/yksikko"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber3"
        app:layout_constraintTop_toTopOf="@+id/editTextNumber2" />

    <Spinner
        android:id="@+id/tavoite2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/yksikko2"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumber3"
        app:layout_constraintStart_toStartOf="@+id/tieto3"
        app:layout_constraintTop_toTopOf="@+id/editTextNumber3" />

    <EditText
        android:id="@+id/editTextNumber3"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/yksikko2"
        app:layout_constraintEnd_toStartOf="@+id/yksikko2" />

    <TextView
        android:id="@+id/yksikko2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="282dp"
        android:text="@string/yksikko"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>